
<div class="row">
  <div class="span12">
    <% content_for :header do  %>
      <p> Header for Gun Caliber Here... </p>
    <% end %>

    <div class="page-header">
      <h4> Gun Caliber/s </h4>
    </div>

    <% if flash[:notice] %>
    <div><%= flash[:notice] %></div>
    <% end %>

    <div class="table-responsive">
      <table class="table table-brdered table-striped table-hover">
        <tr>
          <th class="col-sm-2"></th>
          <th class="col-sm-5">Caliber</th>
          <th class="col-sm-5">Description</th>    
        </tr>

      <% @guncalibers.each do |guncaliber| %>
        <tr>
        	<td class="col-sm-2"><%= link_to 'Edit', edit_gun_caliber_path(guncaliber) %> <%= link_to 'Destroy', guncaliber, confirm: 'Are you sure you want to delete this caliber?', method: :delete %></td>
          <td class="col-sm-5"><%= guncaliber.name %></td>
          <td class="col-sm-5"><%= guncaliber.description %></td>    
        </tr>
      <% end %>
      </table>
    </div>

    <br />

    <%= link_to 'New Caliber', new_gun_caliber_path, class: "btn btn-primary" %>
  </div>
</div>
