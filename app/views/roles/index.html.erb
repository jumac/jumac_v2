
<div class="row">
  <div class="span12">
    <% content_for :header do  %>
      <p> Header for Gun Category Here... </p>
    <% end %>

    <div class="page-header">
      <h4>Roles</h4>
    </div>

    <% if flash[:notice] %>
    <div><%= flash[:notice] %></div>
    <% end %>

    <div class="table-responsive">
      <table class="table table-brdered table-striped table-hover">
        <tr>
          <th class="col-sm-2"></th>
          <th class="col-sm-5">Role Name</th>
          <th class="col-sm-5">Description</th>    
        </tr>

        <% if @roles.empty? %>
          <tr>
            <td colspan="3">
              <p>No roles found.</p>
            </td>
          </tr>
        <% else %>
          <% @roles.each do |role| %>
            <tr>
            	<td class="col-sm-2"><%= link_to 'Edit', edit_role_path(role) %> <%= link_to 'Destroy', role, confirm: 'Are you sure you want to delete this role?', method: :delete %></td>
              <td class="col-sm-5"><%= role.name %></td>
              <td class="col-sm-5"><%= role.description %></td>    
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>

    <br />

    <%= link_to 'New Role', new_role_path %>
  </div>
</div>
