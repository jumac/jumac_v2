
<div class="row">
  <div class="span12">
    <% content_for :header do  %>
      <p> Header for Gun Finish Here... </p>
    <% end %>

    <div class="page-header">
      <h4> Gun Finish </h4>
    </div>

    <% if flash[:notice] %>
    <div><%= flash[:notice] %></div>
    <% end %>

    <div class="table-responsive">
      <table class="table table-brdered table-striped table-hover">
        <tr>
          <th class="col-sm-2"></th>
          <th class="col-sm-5">Name</th>
          <th class="col-sm-5">Description</th>    
        </tr>

      <% @gunfinishes.each do |gunfinish| %>
        <tr>
        	<td class="col-sm-2"><%= link_to 'Edit', edit_gun_finish_path(gunfinish) %> <%= link_to 'Destroy', gunfinish, confirm: 'Are you sure you want to delete this finish?', method: :delete %></td>
          <td class="col-sm-5"><%= gunfinish.name %></td>
          <td class="col-sm-5"><%= gunfinish.description %></td>    
        </tr>
      <% end %>
      </table>
    </div>

    <br />

    <%= link_to 'New Finish', new_gun_finish_path, class: "btn btn-primary" %>
  </div>
</div>
