
<div class="row">
  <div class="span12">
    <% content_for :header do  %>
      <p> Header for Gun Category Here... </p>
    <% end %>

    <div class="page-header">
      <h4> Gun Category/s </h4>
    </div>

    <% if flash[:notice] %>
    <div><%= flash[:notice] %></div>
    <% end %>

    <div class="table-responsive">
      <table class="table table-brdered table-striped table-hover">
        <tr>
          <th class="col-sm-2"></th>
          <th class="col-sm-5">Category</th>
          <th class="col-sm-5">Description</th>    
        </tr>

      <% @guncategories.each do |guncategory| %>
        <tr>
        	<td class="col-sm-2"><%= link_to 'Edit', edit_gun_category_path(guncategory) %> <%= link_to 'Destroy', guncategory, confirm: 'Are you sure you want to delete this category?', method: :delete %></td>
          <td class="col-sm-5"><%= guncategory.name %></td>
          <td class="col-sm-5"><%= guncategory.description %></td>    
        </tr>
      <% end %>
      </table>
    </div>

    <br />

    <%= link_to 'New Category', new_gun_category_path, class: "btn btn-primary" %>
  </div>
</div>
